<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <h1>  Add an ingredient :</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
