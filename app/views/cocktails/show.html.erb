
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="wrapper">
  <div class="container">
    <div class="restau">
      <p class="name"><%= @cocktail.name %></p>
      <ul class="cocktail-doses">
          <% @cocktail.doses.each do |dose| %>
            <li class="dose">
            <p><%= dose.ingredient.name %></p>
            <p><%= dose.description %></p>
            <%= link_to "🗑️", cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?"}, class: "bin"%>
          </li>
        <% end %>
        <%= link_to "ajouter un ingrédient", new_cocktail_dose_path(@cocktail)%>
      </ul>
    </div>
  </div>
</div>



